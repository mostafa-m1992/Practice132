<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ActivityProfile"
    android:orientation="vertical">

    <include layout="@layout/toolbar2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnEdit"
            android:drawableRight="@drawable/ic_edit_black_24dp"
            android:drawableTint="#ffffff"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btnedit"
            android:text="ویرایش اطلاعات"
            android:textColor="@color/light"
            android:textSize="16sp" />
        <Button
            android:id="@+id/btnFav"
            android:drawableRight="@drawable/ic_favorite_black_24dp"
            android:drawableTint="#ffffff"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnfav"
            android:text="لیست علاقه مندی ها"
            android:textColor="@color/light"
            android:textSize="16sp" />
        <Button
            android:id="@+id/btnExit"
            android:drawableRight="@drawable/ic_exit_to_app_black_24dp"
            android:drawableTint="#ffffff"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnexit"
            android:text="خروج"
            android:textColor="@color/light"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>